{# {{dump(app.request)}} #}

{% set uri = app.request.pathinfo ~ '?min_price=' ~ app.request.query.get('min_price') %}
{% set uri = uri ~ '&max_price=' ~ app.request.query.get('max_price') %}
{% set uri = uri ~ '&region_select=' ~ app.request.query.get('region_select') %}
{% set uri = uri ~ '&department_select=' ~ app.request.query.get('department_select') %}
{% set uri = uri ~ '&date_select=' ~ app.request.query.get('date_select') %}
{% set uri = uri ~ '&category=' ~ app.request.query.get('category') %}
{% set uri = uri ~ '&keyword=' ~ app.request.query.get('keyword') %}

{# {{uri}} #}

<nav class="mt-3 mb-3">
    <ul class="pagination">
        <li class="page-item">
        <a class="page-link" href="{{uri}}&page={{ page <= 10 ? 1 : page - 10 }}" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
        </a>
        </li>
        <li class="page-item {{ page == 1 ? 'active' : ''}}"><a class="page-link" href="{{uri}}&page={{ page < 3? 1 : page - 1 }}">{{ page < 3? 1 : page - 1 }}</a></li>
        <li class="page-item {{ page >= 2 ? 'active' : ''}}"><a class="page-link" href="{{uri}}&page={{ page < 3? 2 : page }}">{{ page < 3? 2 : page }}</a></li>
        <li class="page-item"><a class="{{ (page + 1) > max ? 'page-link disabled' : 'page-link' }}" href="{{uri}}&page={{ page < 3? 3 : page + 1 }}">{{ page < 3? 3 : page + 1 }}</a></li>
        <li class="page-item">
        <a class="{{ (page + 1) > max ? 'page-link disabled' : 'page-link' }}" href="{{uri}}&page={{ page + 10 }}" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
        </a>
        </li>
    </ul>
</nav>